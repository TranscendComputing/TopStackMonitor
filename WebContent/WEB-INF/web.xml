<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">

    <servlet>
        <servlet-name>AboutTopstack</servlet-name>
        <servlet-class>com.msi.tough.servlet.AboutAppServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AboutTopstack</servlet-name>
        <url-pattern>/about</url-pattern>
    </servlet-mapping>

    <servlet>
       <servlet-name>MonitorServlet</servlet-name>
        <servlet-class>com.msi.tough.monitor.MonitorServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
      <servlet-name>MonitorServlet</servlet-name>
      <url-pattern>/*</url-pattern>
    </servlet-mapping>

	<listener>
	    <listener-class>com.msi.tough.monitor.MonitorContextListener</listener-class>
	</listener>
</web-app>